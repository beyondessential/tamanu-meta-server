<!DOCTYPE html>
<html data-theme="light">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/static/images/favicon.svg" />
    <link rel="stylesheet" href="/static/bulma/bulma.min.css">
    <link rel="stylesheet" href="/static/private/main.css">
    <title>Tamanu {{ version.major }}.{{ version.minor }}.{{ version.patch }} — Artifacts</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
        }

        .outdated-banner {
            margin-bottom: 2rem;
        }

        .artifact-type {
            font-weight: 600;
            min-width: 120px;
        }

        .artifact-platform {
            font-family: monospace;
            min-width: 100px;
        }

        .artifact-url {
            font-family: monospace;
            font-size: 0.9em;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            flex: 1;
        }

        .artifact-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .artifact-actions {
            display: flex;
            gap: 0.5rem;
            margin-left: auto;
        }

        .copy-feedback {
            position: fixed;
            bottom: 20px;
            right: 20px;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.3s, transform 0.3s;
            pointer-events: none;
        }

        .copy-feedback.show {
            opacity: 1;
            transform: translateY(0);
        }

        .no-artifacts {
            padding: 2rem;
            text-align: center;
            color: #7a7a7a;
            font-style: italic;
        }

        .jump-link {
            margin-bottom: 1rem;
        }

        @media (max-width: 768px) {
            .artifact-item {
                flex-direction: column;
                align-items: stretch;
                gap: 0.75rem;
            }

            .artifact-type,
            .artifact-platform {
                min-width: auto;
            }

            .artifact-url {
                word-break: break-all;
                white-space: normal;
            }

            .artifact-actions {
                flex-direction: column;
                margin-left: 0;
            }

            .artifact-actions .button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <section class="hero is-light">
        <div class="hero-body">
            <div class="container">
                <div class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <div>
                                <h1 class="title mb-2">{{ version.major }}.{{ version.minor }}.{{ version.patch }}</h1>
                                <p class="is-size-7 has-text-grey">{{ version.created_at_date }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="level-right">
                        <a href="/" class="level-item button is-primary">← All versions</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            {% if is_latest == false and latest_version %}
            <div class="box outdated-banner has-background-warning-light">
                <div class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <div>
                                <p class="has-text-weight-bold">⚠️ This is not the latest version.</p>
                                <p>A newer version {{ latest_version }} is available.</p>
                            </div>
                        </div>
                    </div>
                    <div class="level-right">
                        <a href="/versions/{{ latest_version }}" class="level-item button is-primary">
                            View {{ latest_version }}
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="jump-link">
                <a href="#changelog" style="text-decoration: none;">
                    ↓ Jump to changelog
                </a>
            </div>

            <h2 class="title is-4">Artifacts</h2>
            {% if artifacts %}
                {% for artifact in artifacts %}
                <div class="box artifact-item">
                    <span class="artifact-type">{{ artifact.artifact_type }}</span>
                    <span class="artifact-platform">{{ artifact.platform }}</span>
                    <span class="artifact-url">{{ artifact.download_url }}</span>
                    <div class="artifact-actions">
                        {% if artifact.artifact_type == "mobile" %}
                        <a href="/versions/{{ version.major }}.{{ version.minor }}.{{ version.patch }}/mobile" class="button is-info">Install</a>
                        {% endif %}
                        {% if artifact.download_url is starting_with("https://") %}
                        <a href="{{ artifact.download_url }}" class="button is-primary" target="_blank">Download</a>
                        {% endif %}
                        <button class="button" onclick="copyToClipboard('{{ artifact.download_url }}')">
                            Copy URL
                        </button>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <div class="no-artifacts">No artifacts available for this version.</div>
            {% endif %}

            {% if supported_chrome_versions %}
            <div class="box">
                <h3 class="title is-5">Supported Chrome Versions</h3>
                <div class="content">
                    <p>This version of Tamanu was released on <strong>{{ version.created_at_date }}</strong> and supports the following Chrome versions:</p>
                    <p><strong>Chrome {{ supported_chrome_versions | join(", ") }}</strong></p>
                </div>
            </div>
            {% endif %}

            <div class="box" id="changelog">
                <h2 class="title is-4">Changelog</h2>
                <div class="content">
                    {{ version.changelog | safe }}
                </div>
            </div>
        </div>
    </section>

    <div class="notification is-success copy-feedback" id="copyFeedback">
        Copied to clipboard!
    </div>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                const feedback = document.getElementById('copyFeedback');
                feedback.classList.add('show');
                setTimeout(() => {
                    feedback.classList.remove('show');
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy:', err);
                alert('Failed to copy to clipboard');
            });
        }
    </script>
</body>
</html>
