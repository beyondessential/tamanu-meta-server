<!doctype html>
<html>
<head>
  <title>{{ title }}</title>
  <style>
  td, th {
    padding: 0.5em;
    border-width: 1px 0;
    border-style: solid;
    border-color: black;
  }

  th, .success, .failure {
    font-weight: bold;
  }

  table {
    border-collapse: collapse;
  }

  .success {
    background: green;
    color: white;
  }

  .failure {
    background: red;
    color: white;
  }

  .success ~ .error {
    color: grey;
  }

  .failure ~ .error {
    color: darkred;
  }

  .hastitle {
    text-decoration: underline dotted;
  }
  </style>
</head>
<body>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Host</th>
        <th>Up?</th>
        <th>Latency</th>
        <th>Version</th>
        <th>Last seen</th>
        <th>Last error</th>
      </tr>
    </thead>
    <tbody>
      {% for entry in entries %}
      <tr>
        <td>{{ entry.server_name }}</td>
        <td>{{ entry.server_rank }}</td>
        <td><a href="{{ entry.server_host }}">{{ entry.server_host }}</a></td>
        {% if entry.is_up %}
        <td class=success>Yes</td>
        {% else %}
        <td class=failure>No</td>
        {% endif %}
        <td>{% if entry.latest_latency %}{{ entry.latest_latency }}ms{% endif %}</td>
        <td>{{ entry.latest_success_version }}</td>
        {% if entry.latest_success_ts %}<td class=hastitle title="{{ entry.latest_success_ts }}">{{ entry.latest_success_ago }}s ago</td>{% else %}<td>never</td>{% endif %}
        <td class=error>
          {% if entry.latest_error_message %}
            {{ entry.latest_error_message }}
            ({% if entry.latest_error_ts %}<span class=hastitle title="{{ entry.latest_error_ts }}">{{ entry.latest_error_ago }}s ago</span>{% endif %})
          {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</body>
</html>

