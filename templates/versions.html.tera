<!doctype html>
<html>
<head>
  <title>Tamanu Versions</title>
  <style>
  html {
    font-family: sans-serif;
  }

  body {
    margin: 0;
  }

  td, th {
    padding: 0.5em;
    border-width: 1px 0;
    border-style: solid;
    border-color: black;
  }

  th {
    font-weight: bold;
  }

  table {
    border-collapse: collapse;
    width: 500px;
  }

  .published {
    background: green;
    color: white;
  }

  .draft {
    background: yellow;
    color: black;
  }

  .version-row {
    cursor: pointer;
  }

  .version-row:hover {
    background-color: #f0f0f0;
  }

  .changelog-row {
    display: none;
  }

  .changelog-row.expanded {
    display: table-row;
  }

  .changelog-cell {
    background-color: #f8f8f8;
    white-space: pre-wrap;
    word-wrap: break-word;
    max-width: 500px;
    width: 500px;
    padding: 0;
  }
  </style>
</head>
<body>
  <table>
    <thead>
      <tr>
        <th>Version</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {% for version in versions %}
      <tr class="version-row" data-version="{{ version.major }}.{{ version.minor }}.{{ version.patch }}">
        <td>{{ version.major }}.{{ version.minor }}.{{ version.patch }}</td>
        <td class="{% if version.published %}published{% else %}draft{% endif %}">
          {% if version.published %}Published{% else %}Draft{% endif %}
        </td>
      </tr>
      <tr class="changelog-row">
        <td colspan="2" class="changelog-cell">{{ version.changelog }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <script>
    document.querySelectorAll('.version-row').forEach(row => {
      row.addEventListener('click', () => {
        const changelogRow = row.nextElementSibling;
        const isExpanded = changelogRow.classList.contains('expanded');

        // Close all other expanded changelogs
        document.querySelectorAll('.changelog-row.expanded').forEach(content => {
          if (content !== changelogRow) {
            content.classList.remove('expanded');
          }
        });

        // Toggle current changelog
        changelogRow.classList.toggle('expanded');
      });
    });
  </script>
</body>
</html>
