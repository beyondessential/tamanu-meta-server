<!DOCTYPE html>
<html>
<head>
    <title>Tamanu Versions</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            padding: 20px;
            line-height: 1.6;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }
        .version-row {
            cursor: pointer;
        }
        .version-row:hover {
            background-color: #f9f9f9;
        }
        .changelog-row {
            display: none;
        }
        .changelog-row.expanded {
            display: table-row;
        }
        .changelog-cell {
            background-color: #f8f8f8;
            padding: 0;
        }
        .changelog-text {
            padding: 20px;
            max-width: calc(100vw - 80px);
            overflow-x: auto;
            margin: 0;
        }
        .status {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.9em;
        }
        .status.published {
            background: #2ecc71;
            color: white;
        }
        .status.draft {
            background: #f1c40f;
            color: #2c3e50;
        }
        .view-artifacts {
            display: inline-block;
            background: #3498db;
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            transition: background 0.2s;
        }
        .view-artifacts:hover {
            background: #2980b9;
        }
        .markdown-body {
            line-height: 1.6;
        }
        .markdown-body h1,
        .markdown-body h2,
        .markdown-body h3 {
            margin-top: 24px;
            margin-bottom: 16px;
            font-weight: 600;
            line-height: 1.25;
        }
        .markdown-body p {
            margin-bottom: 16px;
        }
        .markdown-body code {
            padding: 0.2em 0.4em;
            margin: 0;
            font-size: 85%;
            background-color: rgba(27,31,35,0.05);
            border-radius: 3px;
            font-family: "SFMono-Regular",Consolas,"Liberation Mono",Menlo,Courier,monospace;
        }
        .markdown-body pre {
            padding: 16px;
            overflow: auto;
            font-size: 85%;
            line-height: 1.45;
            background-color: #f6f8fa;
            border-radius: 3px;
        }
        .markdown-body ul,
        .markdown-body ol {
            padding-left: 2em;
            margin-bottom: 16px;
        }
        .markdown-body li {
            margin: 0.25em 0;
        }
        .markdown-body blockquote {
            padding: 0 1em;
            color: #6a737d;
            border-left: 0.25em solid #dfe2e5;
            margin: 0 0 16px 0;
        }
    </style>
</head>
<body>
    <p style="text-align: right">
      <a href="{{ env.STATUS_PAGE_URL | default(value="/$/status") }}">
        Server statuses
      </a>
    </p>

    <h1>Tamanu Versions</h1>
    <table>
        <thead>
            <tr>
                <th>Version</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for version in versions %}
            <tr class="version-row" data-version="{{ version.major }}.{{ version.minor }}.{{ version.patch }}">
                <td>{{ version.major }}.{{ version.minor }}.{{ version.patch }}</td>
                <td>
                    <span class="status {% if version.published %}published{% else %}draft{% endif %}">
                        {% if version.published %}Published{% else %}Draft{% endif %}
                    </span>
                </td>
                <td>
                    <a href="/versions/{{ version.major }}.{{ version.minor }}.{{ version.patch }}" class="view-artifacts">
                        View Artifacts
                    </a>
                </td>
            </tr>
            <tr class="changelog-row">
                <td colspan="3" class="changelog-cell">
                    <div class="changelog-text markdown-body">{{ version.changelog | safe }}</div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <script>
        document.querySelectorAll('.version-row').forEach(row => {
            row.addEventListener('click', () => {
                const changelogRow = row.nextElementSibling;
                const isExpanded = changelogRow.classList.contains('expanded');
                document.querySelectorAll('.changelog-row.expanded').forEach(content => {
                    if (content !== changelogRow) {
                        content.classList.remove('expanded');
                    }
                });
                changelogRow.classList.toggle('expanded');
            });
        });
    </script>
</body>
</html>
